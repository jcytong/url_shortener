<h1>URL Shortener</h1>

<%= form_with model: Link.new do |form| %>
  <div class="flex gap-2 item-center">
    <%= form.url_field :url, required: true, autofocus: true, placeholder: "https://example.org", class: "flex-grow rounded" %>
    <%= form.submit "Save", class: "px-3 py-2 bg-gray-100 rounded" %>
  </div>
<% end %>

<%= render @links %>
